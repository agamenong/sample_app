<h1>Sign Up</h1>

<%= form_for(@user) do |f| %>

  <%= render 'shared/error_messages' %>

  <div classs="field"> 
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>	
  <div classs="field"> 
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div classs="field"> 
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div classs="field"> 
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div classs="actions"> 
    <%= f.submit "Sign up" %>
  </div>
<% end %>